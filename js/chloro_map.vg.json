{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 675,
  "height": 500,
  "projection": {"type": "equirectangular"},
  "title": "Heat map of retail price in a specific year",
  "background": "#fbefdf",
  "data": {
    "url": "https://raw.githubusercontent.com/WillGalg/FIT3179-A2/main/js/World.topo.json",
    "format": {"type": "topojson", "feature": "World.geo"}},
    "transform": [{
      "lookup": "properties.name",
      "from":{"data":{"url": "https://raw.githubusercontent.com/WillGalg/FIT3179-A2/main/js/ICO Dataset.csv"},
      "key": "Country",
      "fields": ["Price"]}
    },
    {"calculate":"datum.Price+0.1","as":"Retail price"}],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {"field": "Price", "type": "quantitative"},
      "tooltip": [
        {"field":"properties.name","type": "nominal","title":"Country"},
        {"field": "Price","type": "quantitative"}
      ]
      }
    }